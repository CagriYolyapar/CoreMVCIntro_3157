@model CategoryVM
@{
    ViewData["Title"] = "UpdateCategory";
}

<form asp-action="UpdateCategory" asp-controller="Category" method="post">

    <input type="hidden" asp-for="Category.ID" />

    <div>

        <input type="text" asp-for="Category.CategoryName" placeholder="Lüfen kategori ismini giriniz" />

    </div>

    <div>
        <input type="text" asp-for="Category.Description" placeholder="Lütfen Acıklama giriniz" />
    </div>

    <button class="btn btn-primary">
        Ekle
    </button>


</form>



