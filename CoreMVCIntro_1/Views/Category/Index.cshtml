@model CategoryVM
@{
    ViewData["Title"] = "Index";
}


<table class="table table-hover">
     <thead>
         <tr>
             <th>Kategori Ismi</th>
             <th>Kategori Acıklaması</th>
             <th colspan="2"> İslemler</th>
         </tr>
     </thead>

    <tbody>
        @foreach (Category item in Model.Categories)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td><a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-warning"> Güncelle </a></td>
                <td><a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger"> Sil </a></td>
            </tr>
        }
    </tbody>
</table>
